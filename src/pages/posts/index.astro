---
import { getCollection } from "astro:content";
import PostCard from "@/components/common/PostCard.astro";
import InnerLayout from "@/components/layouts/InnerLayout.astro";
import OuterLayout from "@/components/layouts/OuterLayout.astro";
import Layout from "@/layouts/Layout.astro";

const allPosts = await getCollection("posts");
---

<Layout title="Posts Page">
  <OuterLayout>
    <h1 class="text-2xl sm:text-4xl font-bold text-center">Posts Page</h1>
    <InnerLayout className="mt-4 sm:mt-10">
      <p class="max-w-2xl mx-auto">
        This is a list of all the posts on the site.
      </p>
      <ul
        class="grid grid-cols-2 gap-4 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3 lg:gap-10 mt-10"
      >
        {allPosts.map((post) => <PostCard post={post} />)}
      </ul>
    </InnerLayout>
  </OuterLayout>
</Layout>
