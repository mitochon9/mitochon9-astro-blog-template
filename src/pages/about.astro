---
import InnerLayout from "@/components/layouts/InnerLayout.astro";
import OuterLayout from "@/components/layouts/OuterLayout.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <OuterLayout>
    <h1 class="text-2xl sm:text-4xl font-bold text-center">About Page</h1>

    <InnerLayout className="mt-4 sm:mt-10">
      <p class="max-w-2xl mx-auto">
        This is the about page.<br />
        It's a static page that is generated at build time.
      </p>
    </InnerLayout>
  </OuterLayout>
</Layout>
