---
import { cn } from "@/lib/utils";

interface Props {
	className?: string;
}

const { className } = Astro.props;
---

<div
  class="py-10 sm:py-20 px-2 sm:px-4 xl:px-0 bg-pattern01 bg-cover bg-center"
>
  <div
    class={cn(
      "mx-auto max-w-screen-xl bg-white py-4 sm:py-10 rounded-md",
      className
    )}
  >
    <slot />
  </div>
</div>
